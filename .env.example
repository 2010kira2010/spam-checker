# Application
APP_NAME=SpamChecker
APP_PORT=8080
APP_ENV=development
LOG_LEVEL=info

# Database
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME=spamchecker
DB_SSLMODE=disable

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRATION_HOURS=24
JWT_REFRESH_EXPIRATION_DAYS=7

# OCR
TESSERACT_PATH=/usr/bin/tesseract
OCR_LANGUAGE=rus+eng
OCR_CONFIG_PATH=

# Swagger
SWAGGER_HOST=localhost:8080
SWAGGER_BASE_PATH=/api/v1
SWAGGER_TITLE=SpamChecker API
SWAGGER_DESCRIPTION=API for checking phone numbers in spam services
SWAGGER_VERSION=1.0.0

# Android Emulators
ANDROID_YANDEX_HOST=android-yandex
ANDROID_YANDEX_PORT=5554

ANDROID_KASPERSKY_HOST=android-kaspersky
ANDROID_KASPERSKY_PORT=5554

ANDROID_GETCONTACT_HOST=android-getcontact
ANDROID_GETCONTACT_PORT=5554

# Notifications
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=

SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=noreply@spamchecker.com

